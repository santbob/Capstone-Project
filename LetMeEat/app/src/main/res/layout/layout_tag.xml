<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/small_pad"
    android:layout_marginStart="@dimen/small_pad"
    android:background="@drawable/box"
    android:orientation="horizontal"
    android:padding="@dimen/small_pad">

    <TextView
        android:id="@+id/tag_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/small_pad"
        android:paddingStart="@dimen/small_pad"
        android:textColor="@color/colorPrimary" />

    <ImageView
        android:id="@+id/del_tag_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_circle_outline" />
</LinearLayout>